# tleguern cwmrc

sticky yes
snapdist 20

command Firefox /usr/local/bin/firefox
command Thunderbird /usr/local/bin/thunderbird
command Xterm /usr/X11R6/bin/xterm

ignore xclock
ignore xconsole

autogroup 1 "gajim.Gajim"
autogroup 1 "Mail.Thunderbird"
autogroup 2 "Navigator.Firefox"

bind-key CM-1 group-only-1
bind-key CM-2 group-only-2
bind-key CM-3 group-only-3
bind-key MS-1 window-movetogroup-1
bind-key MS-2 window-movetogroup-2
bind-key MS-3 window-movetogroup-3
bind-key M-v window-vtile

color urgencyborder red
color activeborder white
color inactiveborder gray
gap 0 0 0 20


