# tleguern cwmrc

color urgencyborder red
color activeborder white
color inactiveborder gray
gap 0 0 0 180

sticky yes

command term /usr/X11R6/bin/uxterm

command Firefox /usr/local/bin/firefox
command Thunderbird /usr/local/bin/thunderbird
command Pidgin /usr/local/bin/pidgin

ignore xlock

bind M-F5 "/usr/X11R6/bin/xbacklight -5"
bind M-F6 "/usr/X11R6/bin/xbacklight +5"
bind M-1 grouponly1
bind M-2 grouponly2
bind M-3 grouponly3
bind M-4 grouponly4
bind M-5 grouponly5
bind MS-1 movetogroup1
bind MS-2 movetogroup2
bind MS-3 movetogroup3
bind MS-4 movetogroup4
bind MS-5 movetogroup5
bind M-Tab cycleingroup
bind CM-Tab rcycleingroup
