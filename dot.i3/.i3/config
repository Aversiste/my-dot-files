set $modkey Mod4

workspace_bar yes
#exec mozilla-firefox 2> /dev/null
exec sh ~/.i3/scripts/i3-bar.sh
terminal /usr/local/bin/urxvt

bind	$modkey+21 exec mixer vol +1
bind	$modkey+20 exec mixer vol -1
bindsym $modkey+p exec mpc toggle
bind	$modkey+35 exec mpc next
bind	$modkey+34 exec mpc prev
bindsym $modkey+u exec setxkbmap us
bindsym $modkey+i exec setxkbmap fr

bindsym $modkey+c exec ~/.i3/scripts/calendar.sh

# This configuration uses Mod1 and Mod3. Make sure they are mapped properly using xev(1)
# and xmodmap(1). Usually, Mod1 is Alt (Alt_L) and Mod3 is Windows (Super_L)

# ISO 10646 = Unicode
font -misc-anonymous pro-medium-r-normal--13-*-*-*-*-*-iso10646-1
#font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1

# Use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod1

# Fullscreen ($modkey+f)
bind $modkey+41 f

# Stacking ($modkey+h)
bind $modkey+43 s

# Tabbed ($modkey+w)
bind $modkey+25 T

# Default ($modkey+e)
bind $modkey+26 d

# Toggle tiling/floating of the current window ($modkey+Shift+Space)
bind $modkey+65 t

# Go into the tiling layer / floating layer, depending on whether
# the current window is tiling / floating ($modkey+t)
bind $modkey+28 focus ft

# Focus ($modkey+j/k/l/;)
bind $modkey+44 h
bind $modkey+45 j
bind $modkey+46 k
bind $modkey+47 l
# (alternatively, you can use the cursor keys:)
bindsym $modkey+Left h
bindsym $modkey+Down j
bindsym $modkey+Up k
bindsym $modkey+Right l

# Focus Container (Mod3+j/k/l/;)
bind Mod3+44 wch
bind Mod3+45 wcj
bind Mod3+46 wck
bind Mod3+47 wcl
# (alternatively, you can use the cursor keys:)
bindsym Mod3+Left wch
bindsym Mod3+Down wcj
bindsym Mod3+Up wck
bindsym Mod3+Right wcl

# Snap ($modkey+Control+j/k/l/;)
bind $modkey+Control+44 sh
bind $modkey+Control+45 sj
bind $modkey+Control+46 sk
bind $modkey+Control+47 sl
# (alternatively, you can use the cursor keys:)
bindsym $modkey+Control+Left sh
bindsym $modkey+Control+Down sj
bindsym $modkey+Control+Up sk
bindsym $modkey+Control+Right sl

# Move ($modkey+Shift+j/k/l/;)
bind $modkey+Shift+44 mh
bind $modkey+Shift+45 mj
bind $modkey+Shift+46 mk
bind $modkey+Shift+47 ml
# (alternatively, you can use the cursor keys:)
bindsym $modkey+Shift+Left mh
bindsym $modkey+Shift+Down mj
bindsym $modkey+Shift+Up mk
bindsym $modkey+Shift+Right ml

# Move Container (Mod3+Shift+j/k/l/;)
bind Mod3+Shift+44 wcmh
bind Mod3+Shift+45 wcmj
bind Mod3+Shift+46 wcmk
bind Mod3+Shift+47 wcml

# Workspaces ($modkey+1/2/…)
bind $modkey+10 1
bind $modkey+11 2
bind $modkey+12 3
bind $modkey+13 4
bind $modkey+14 5
bind $modkey+15 6
bind $modkey+16 7
bind $modkey+17 8
bind $modkey+18 9
bind $modkey+19 10

# Move to Workspaces
bind $modkey+Shift+10 m1
bind $modkey+Shift+11 m2
bind $modkey+Shift+12 m3
bind $modkey+Shift+13 m4
bind $modkey+Shift+14 m5
bind $modkey+Shift+15 m6
bind $modkey+Shift+16 m7
bind $modkey+Shift+17 m8
bind $modkey+Shift+18 m9
bind $modkey+Shift+19 m10

# $modkey+Enter starts a new terminal
#bind $modkey+36 exec /usr/X11R6/bin/xterm
bind $modkey+36 exec /usr/local/bin/urxvt

# $modkey+Shift+x kills the current client
bind $modkey+53 kill

# $modkey+v starts dmenu and launches the selected application
# for now, we don’t have a launcher of our own.
#bind $modkey+55 exec /usr/local/bin/dmenu_run
bind $modkey+55 exec /usr/local/bin/dmenu_run -nb "#252525" -nf "#e3e3e3" -sb "#1e5e8a"

# $modkey+Shift+e exits i3
bind $modkey+Shift+26 exit

# $modkey+Shift+r restarts i3 inplace
bind $modkey+Shift+27 restart

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.i3/ipc.sock

#############################################################
# DELETE THE FOLLOWING LINES TO DISABLE THE WELCOME MESSAGE #
#############################################################
#exec /usr/X11R6/bin/xmessage -file /etc/i3/welcome

mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # They resize the border in the direction you pressed, e.g.
        # when pressing left, the window is resized so that it has
        # more space on its left

        bindsym n resize left -10
        bindsym Shift+n resize left +10

        bindsym r resize bottom +10
        bindsym Shift+r resize bottom -10

        bindsym t resize top -10
        bindsym Shift+t resize top +10

        bindsym d resize right +10
        bindsym Shift+d resize right -10

        bind 36 mode default
}

# Enter resize mode
bindsym $modkey+r mode resize
