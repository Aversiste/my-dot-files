set $modkey Mod4

workspace 1 work
workspace 2 www
workspace 5 nethack
workspace 8 misc
workspace 10 music

assign xconsole 8
assign "URxvt/ncmpc" 10

workspace_bar yes
exec mozilla-firefox 2> /dev/null
exec sh ~/.i3/scripts/i3-bar.sh
exec urxvt -e ncmpc
terminal /usr/local/bin/urxvt

bind	$modkey+21 exec mixer vol +1
bind	$modkey+20 exec mixer vol -1
bindsym $modkey+p exec mpc toggle
bind	$modkey+35 exec mpc next
bind	$modkey+34 exec mpc prev
bindsym $modkey+u exec setxkbmap us
bindsym $modkey+i exec setxkbmap fr

bindsym $modkey+c exec ~/.i3/scripts/calendar.sh

# ISO 10646 = Unicode
font -misc-anonymous pro-medium-r-normal--13-*-*-*-*-*-iso10646-1

# Use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod1

# Fullscreen ($modkey+f)
bindsym $modkey+f f

# Stacking ($modkey+s)
bindsym $modkey+s s
# Tabbed ($modkey+w)
bindsym $modkey+w T

# Default ($modkey+e)
bindsym $modkey+e d

# Toggle tiling/floating of the current window ($modkey+Space)
bind $modkey+65 t

# Go into the tiling layer / floating layer, depending on whether
# the current window is tiling / floating ($modkey+Tab)
bind $modkey +23 focus ft

# Focus ($modkey+h/j/k/l)
bindsym $modkey+h h
bindsym $modkey+j j
bindsym $modkey+k k
bindsym $modkey+l l

# Focus Container ($modkey+Mod1+h/j/k/l)
bindsym $modkey+Mod1+h wch
bindsym $modkey+Mod1+j wcj
bindsym $modkey+Mod1+k wck
bindsym $modkey+Mod1+l wcl

# Snap ($modkey+Control+h/j/k/l)
bindsym $modkey+Control+h sh
bindsym $modkey+Control+j sj
bindsym $modkey+Control+k sk
bindsym $modkey+Control+l sl

# Move ($modkey+Shift+h/j/k/l)
bindsym $modkey+Shift+h mh
bindsym $modkey+Shift+j mj
bindsym $modkey+Shift+k mk
bindsym $modkey+Shift+l ml

# Move Container (Mod3+Shift+h/j/k/l)
bindsym Mod3+Shift+h wcmh
bindsym Mod3+Shift+j wcmj
bindsym Mod3+Shift+k wcmk
bindsym Mod3+Shift+l wcml

# Workspaces ($modkey+[1-9,0])
bind $modkey+10 1
bind $modkey+11 2
bind $modkey+12 3
bind $modkey+13 4
bind $modkey+14 5
bind $modkey+15 6
bind $modkey+16 7
bind $modkey+17 8
bind $modkey+18 9
bind $modkey+19 10

# Move to Workspaces
bind $modkey+Shift+10 m1
bind $modkey+Shift+11 m2
bind $modkey+Shift+12 m3
bind $modkey+Shift+13 m4
bind $modkey+Shift+14 m5
bind $modkey+Shift+15 m6
bind $modkey+Shift+16 m7
bind $modkey+Shift+17 m8
bind $modkey+Shift+18 m9
bind $modkey+Shift+19 m10

# $modkey+Enter starts a new terminal
bind $modkey+36 exec /usr/local/bin/urxvt

# $modkey+Shift+x kills the current client
bindsym $modkey+x kill

# $modkey+v starts dmenu and launches the selected application
# for now, we don't have a launcher of our own.
bind $modkey+55 exec /usr/local/bin/dmenu_run -nb "#252525" -nf "#e3e3e3" -sb "#1e5e8a"

# $modkey+Shift+e exits i3
bindsym $modkey+Shift+e exit

# $modkey+Shift+r restarts i3 inplace
bindsym $modkey+Shift+r restart

# The IPC interface allows programs like an external workspace bar
# (i3-wsbar) or i3-msg (can be used to "remote-control" i3) to work.
ipc-socket ~/.i3/ipc.sock

mode "resize" {
        bindsym h resize left -10
        bindsym j resize top +10
        bindsym k resize top -10
        bindsym l resize left +10
        bindsym $modkey+r mode default
}

# Enter resize mode
bindsym $modkey+r mode resize
